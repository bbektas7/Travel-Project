@model TravelTripProject.Models.Comments
@{
    ViewBag.Title = "BringComment";
    Layout = "~/Views/Shared/_AdminLayOut.cshtml";
}

<h2>BringComment</h2>
<br />
@using (Html.BeginForm("UpdateComment", "AdminPanel", FormMethod.Post))
{
    @Html.LabelFor(x => x.Id)
    @Html.TextBoxFor(x => x.Id, new {@class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.User)
    @Html.TextBoxFor(x => x.User, new {@class = "form-control"})
    <br />
    @Html.LabelFor(x => x.Email)
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.comment)
    @Html.TextAreaFor(x => x.comment, 15, 1, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Update Comment</button>
}
