@using TravelTripProject.Models.Classes
@model List<TravelTripProject.Models.Comments>
@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayOut.cshtml";
}

<h2>Comment List</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>USER</th>
        <th>EMAIL</th>
        <th>COMMENT</th>
        <th>BLOG</th>
        <th>DELETE</th>
        <th>UPDATE</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Id</td>
            <td>@x.User</td>
            <td>@x.Email</td>
            <td>@x.comment</td>
            <td>@x.Blog.Title</td>
            <td><a href="/AdminPanel/DeleteComment/@x.Id" class="btn btn-danger">Delete</a></td>
            <td><a href="/AdminPanel/BringComment/@x.Id" class="btn btn-warning">Update</a></td>
        </tr>
    }
</table>