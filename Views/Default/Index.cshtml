@using TravelTripProject.Models.Classes
@model List<TravelTripProject.Models.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}


<!DOCTYPE HTML>
<html>
<body>   
    <div class="header-banner">
        <div class="wrap">
            <div class="banner">
                <div class="indent">
                    <h2 class="indent-left margin-bot">Plan the Easy Trip</h2>
                    <div class="banner-left">
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/glass.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Restaurants</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/flight.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Flights</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/group.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Things to do</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/key.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Vacation Rents</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="header_bottom_right_images">

                        <div class="slider" style="width:600px;height:400px">
                            <ul class="rslides" id="slider1">
                                @foreach (var x in Model)
                                {
                                <li><img src="@x.BlogImage" alt=""></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class"content">
        <div class="wrap">
            <div class="wrapper">
                <div class="con-top">
                    <h3>Welcome to My WAT Experiences</h3>
                    <p> Daha sayfamı geliştirme aşamasındayım. Staja başladığım günden beri kendimce bir site yapmaya çalışıyorum. Bu siteyi bitirdiğimde wat deneyimlerimi anlattığım bir site olarak kullanıcam. Gittiğim yerleri, kaldığım yerleri, çalıştığım işleri wat a dair her şeyi burda size anlatıcam ve kendim araştırıp bulamaadığım her şeyi burda anlatıcam.</p>
                </div>

                <div class="grids">
                    <div class="box1">
                        @Html.Action("Partial1","Default")
                        @Html.Action("Partial2","Default")
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>   
</body>
</html>

